<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cadastros.CadInsumos"
    android:background="@drawable/fundo">


    <ImageButton
        android:id="@+id/btn_voltar"
        android:layout_width="104dp"
        android:layout_height="60dp"
        android:background="@android:color/transparent"
        android:contentDescription="botao_voltar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.105"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.044"
        app:srcCompat="@drawable/voltar" />

    <TextView
        android:id="@+id/tvTitulo4"
        android:layout_width="587dp"
        android:layout_height="68dp"
        android:text="Cadastro de Insumos"
        android:textAlignment="center"
        android:textColor="#040404"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.114" />


    <EditText
        android:id="@+id/edtNomeInsumo"
        android:layout_width="570dp"
        android:layout_height="80dp"
        android:background="@drawable/input_custom"
        android:drawableStart="@drawable/ic_insumo_ico"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Nome do Insumo"
        android:inputType="text"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.236" />

    <EditText
        android:id="@+id/edtQuantidade"
        android:layout_width="570dp"
        android:layout_height="80dp"
        android:background="@drawable/input_custom"
        android:drawableStart="@drawable/ic_concentracao_ico"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Quant. Kg por hectare (ha)"
        android:inputType="number"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.43" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
        android:layout_width="570dp"
        android:layout_height="80dp"
        android:layout_margin="16dp"
        android:background="@drawable/input_custom"
        android:contentDescription="@string/unidade_descricao"
        android:hint="@string/unidade"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.33">

        <AutoCompleteTextView
            android:id="@+id/autoUniMedida"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:contentDescription="@string/unidade2"
            android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/edtDescricao"
        android:layout_width="570dp"
        android:layout_height="350dp"
        android:background="@drawable/input_custom"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Descrições"
        android:inputType="textMultiLine"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.703" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAdicionarInsumo"
        android:layout_width="570dp"
        android:layout_height="80dp"
        android:background="@drawable/backgroun_branco"
        android:text="Salvar"
        android:textAlignment="center"
        android:textColor="#020202"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.944" />


</androidx.constraintlayout.widget.ConstraintLayout>