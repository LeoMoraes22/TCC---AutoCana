<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cadastros.CadProducoes"
    android:background="@drawable/fundo">


    <ImageButton
        android:id="@+id/btn_voltar"
        android:layout_width="114dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:contentDescription="botao_voltar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.105"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.044"
        app:srcCompat="@drawable/voltar" />


    <ImageButton
        android:id="@+id/btn_procPlantacao"
        android:layout_width="71dp"
        android:layout_height="77dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_lupa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.887"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.223" />

    <TextView
        android:id="@+id/tvTitulo4"
        android:layout_width="535dp"
        android:layout_height="56dp"
        android:text="Cadastro de Produções"
        android:textAlignment="center"
        android:textColor="#040404"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.114" />


    <EditText
        android:id="@+id/edtNomePlantacao"
        android:layout_width="515dp"
        android:layout_height="80dp"
        android:background="@drawable/input_custom"
        android:drawableStart="@drawable/ic_plantacao_edt"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Nome da Plantação"
        android:inputType="text"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.224" />

    <EditText
        android:id="@+id/edtDataInicial"
        android:layout_width="570dp"
        android:layout_height="80dp"
        android:background="@drawable/input_custom"
        android:drawableStart="@drawable/ic_calendario"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Data Inicial"
        android:inputType="text"
        android:maxLength="10"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.576"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.328" />

    <EditText
        android:id="@+id/edtDataFinal"
        android:layout_width="570dp"
        android:layout_height="80dp"
        android:background="@drawable/input_custom"
        android:drawableStart="@drawable/ic_calendario"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Data Final"
        android:inputType="text"
        android:maxLength="10"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.433" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
        android:layout_width="570dp"
        android:layout_height="80dp"
        android:layout_margin="16dp"
        android:background="@drawable/input_custom"
        android:contentDescription="@string/unidade_descricao"
        android:hint="@string/colhido"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.573"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.529">


        <AutoCompleteTextView
            android:id="@+id/autoColhido"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:contentDescription="@string/unidade2"
            android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/edtDescricao"
        android:layout_width="570dp"
        android:layout_height="320dp"
        android:background="@drawable/input_custom"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Descrições"
        android:inputType="textMultiLine"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.804" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Adicionar"
        android:layout_width="570dp"
        android:layout_height="80dp"
        android:background="@drawable/backgroun_branco"
        android:text="Salvar"
        android:textAlignment="center"
        android:textColor="#020202"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.573"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.944" />


</androidx.constraintlayout.widget.ConstraintLayout>