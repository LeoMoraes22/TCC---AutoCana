<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    tools:context=".cadastros.CadPlantacoes">


    <ImageButton
        android:id="@+id/btn_voltar"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:contentDescription="botao_voltar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.105"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.044"
        app:srcCompat="@drawable/voltar" />

    <TextView
        android:id="@+id/tvTitulo5"
        android:layout_width="271dp"
        android:layout_height="37dp"
        android:text="Cadastro de Plantações"
        android:textAlignment="center"
        android:textColor="#040404"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.139" />

    <EditText
        android:id="@+id/edtNomePlantacao"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:background="@drawable/input_custom"
        android:drawableStart="@drawable/ic_plantacao_edt"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Nome da Plantação"
        android:inputType="text"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.24" />


    <EditText
        android:id="@+id/edtCidade"
        android:layout_width="197dp"
        android:layout_height="50dp"
        android:background="@drawable/input_custom"
        android:drawableStart="@drawable/ic_cidade"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Cidade"
        android:inputType="text"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.233"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.336" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
        android:layout_width="108dp"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:background="@drawable/input_custom"
        android:contentDescription="@string/unidade_descricao"
        android:hint="@string/estados"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.881"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.327">

        <AutoCompleteTextView
            android:id="@+id/autoEstado"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:contentDescription="@string/unidade2"
            android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/edtArea"
        android:layout_width="239dp"
        android:layout_height="56dp"
        android:background="@drawable/input_custom"
        android:drawableStart="@drawable/ic_area"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Área Plantada (m²)"
        android:inputType="numberDecimal"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.29"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.441" />

    <EditText
        android:id="@+id/edtDescricao"
        android:layout_width="310dp"
        android:layout_height="200dp"
        android:background="@drawable/input_custom"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Descrições"
        android:inputType="textMultiLine"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.704" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Adicionar"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:background="@drawable/backgroun_branco"
        android:text="Salvar"
        android:textAlignment="center"
        android:textColor="#020202"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.944" />

    <ImageButton
        android:id="@+id/btn_areaPlantada"
        android:layout_width="54dp"
        android:layout_height="55dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.857"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.442"
        app:srcCompat="@drawable/ic_area_nova" />


</androidx.constraintlayout.widget.ConstraintLayout>